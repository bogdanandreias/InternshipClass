@{
    ViewData["Title"] = "Information about our classroom";
}

@section styles {
    <!-- Read about this here https://fontawesome.com/icons?d=gallery&p=2 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

@section scripts {
    <script type="text/javascript" src="~/js/addNewcomer.js"></script>
    <script type="text/javascript" src="~/js/removeNewcomer.js"></script>
}﻿
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Internship class</title>

</head> 
<body>
    <h1>Internship Landpage</h1>
    <p>Here is our classroom</p>

    <ul id="list">
        @for (var i = 0; i < Model.Members.Count; i++)
        {
            var member = Model.Members[i];
            
            <li class="member" >
                <span class="name">@member</span><span class="delete fa fa-pencil"></span><i class="fa fa-remove delete" memberId="@i"></i>
            </li>
        }
    </ul>

    <input id="newcomer" title="Name" type="text" />
    <button id="add" class="btn btn-primary">
        <i class="fa fa-plus-circle"></i>
        Add new commer
    </button>
    <button id="clear" class="btn btn-secondary">
        <i class="fa fa-cut"></i>
        Clear
    </button>
    <p></p><img src="~/img/GoodCodeRules.png" width="200" />

</body>
</html>
